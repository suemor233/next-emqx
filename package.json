{
  "name": "smart-home",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development next dev -p 5463",
    "analyze": "cross-env NODE_ENV=production ANALYZE=true BUNDLE_ANALYZE=browser next build",
    "build": "cross-env NODE_ENV=production next build",
    "start": "npm run dev",
    "lint": "eslint --ext .ts,.tsx --ignore-path .gitignore . --fix",
    "prod:pm2": "cross-env NODE_ENV=production pm2 restart ecosystem.config.js",
    "prod:pm2-alone": "cross-env NODE_ENV=production pm2 restart ecosystem.standalone.config.js",
    "prod:stop": "pm2 stop ecosystem.config.js",
    "prod:reload": "pm2 reload ecosystem.config.js"
  },
  "dependencies": {
    "@next/bundle-analyzer": "^12.3.1",
    "@nextui-org/react": "1.0.0-beta.10",
    "clsx": "^1.2.1",
    "cross-env": "^7.0.3",
    "framer-motion": "^7.5.0",
    "mobx": "^6.6.2",
    "mobx-react-lite": "^3.4.0",
    "mobx-utils": "^6.0.5",
    "mqtt": "^4.3.7",
    "next": "12.3.1",
    "next-compose-plugins": "^2.2.1",
    "randomcolor": "^0.6.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "^4.4.0",
    "react-message-popup": "1.0.0-alpha.4",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@suemor/eslint-config-react-ts": "^1.0.1",
    "@suemor/prettier": "^1.0.1",
    "@types/node": "18.7.23",
    "@types/react": "18.0.21",
    "@types/react-dom": "18.0.6",
    "eslint": "8.24.0",
    "eslint-config-next": "12.3.1",
    "lodash-es": "^4.17.21",
    "postcss": "^8.4.16",
    "postcss-import": "^15.0.0",
    "postcss-nested": "^5.0.6",
    "postcss-preset-env": "^7.8.2",
    "typescript": "4.8.4",
    "windicss": "^3.5.6",
    "windicss-webpack-plugin": "^1.7.6"
  }
}
